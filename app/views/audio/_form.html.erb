<div class="container m-5 p-5" id="audio_form">
    <h2 class="text-2x1 font-bold mb-4">Record a New Response</h2>
    <%= form_with url: tts_path, method: :post do %>
        <div class="mb-4">
            <%= text_area_tag :prompt,
            nil,
            rows: 4,
            cols: 50,
            placeholder: "Enter Text to  Generate a Voice Response...",
            class: "form-textarea mt-1 block w-full amber-300 rounded-md shadow-sm focus:border-indigo-400 focus:ring focus:ring-indigo-500 focus:ring-opacity-50" %>
        </div>
            <%= submit_tag "Generate Voice", class: "bg-blue-500 hover:bg-blue-700 text-white font-blod py-2 px-4 rounded" %>
    <% end %>
</div>